{
  "compilerOptions": {
    "noEmit" : true,
    "sourceMap" : true,
    "forceConsistentCasingInFileNames" : true,
    "strict" : true,
    "module" : "ESNext",
    "noImplicitAny" : false,
    "noEmitOnError" : false,
    "target" : "ES6",
    "pretty" : true,
    "declaration" : true,
    "moduleResolution" : "node",
    "resolveJsonModule" : true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "lib": [
    "es6"
  ],
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
