{
  "compilerOptions": {
    "target" : "ES2020",
    "module" : "ES2020",
    "moduleResolution" : "node",
    "sourceMap" : true,
    "outDir" : "dist",
    "forceConsistentCasingInFileNames" : true,
    "strict" : true,
    "noImplicitAny" : false,
    "noEmitOnError" : true,
    "pretty" : true,
    "declaration" : true,
    "resolveJsonModule" : true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
  ]
}